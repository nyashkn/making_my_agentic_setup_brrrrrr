{
  "_comment": "Claude Code notification hooks using cc-notifier (multi-instance aware)",
  "_usage": "Merge these hooks into your ~/.claude/settings.json",
  "_dependencies": "Hammerspoon, terminal-notifier, cc-notifier binary",
  "_installation": "make notifications-install BACKEND=cc-notifier",
  "_features": "Window tracking, click-to-focus across Spaces, remote SSH support",

  "hooks": {
    "SessionStart": [{
      "hooks": [{
        "type": "command",
        "command": "$HOME/.cc-notifier/cc-notifier init",
        "timeout": 30
      }]
    }],

    "Stop": [{
      "hooks": [{
        "type": "command",
        "command": "$HOME/.cc-notifier/cc-notifier notify",
        "timeout": 5
      }]
    }],

    "SubagentStop": [{
      "hooks": [{
        "type": "command",
        "command": "$HOME/.cc-notifier/cc-notifier notify",
        "timeout": 5
      }]
    }],

    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [{
          "type": "command",
          "command": "$HOME/.cc-notifier/cc-notifier notify",
          "timeout": 5
        }]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [{
          "type": "command",
          "command": "$HOME/.cc-notifier/cc-notifier notify",
          "timeout": 5
        }]
      },
      {
        "matcher": "elicitation_dialog",
        "hooks": [{
          "type": "command",
          "command": "$HOME/.cc-notifier/cc-notifier notify",
          "timeout": 5
        }]
      }
    ],

    "PermissionRequest": [{
      "matcher": "Bash",
      "hooks": [{
        "type": "command",
        "command": "$HOME/.cc-notifier/cc-notifier notify",
        "timeout": 5
      }]
    }],

    "SessionEnd": [{
      "hooks": [{
        "type": "command",
        "command": "$HOME/.cc-notifier/cc-notifier cleanup",
        "timeout": 5
      }]
    }]
  },

  "env": {
    "_comment_pushover": "Optional: Configure Pushover for remote/SSH notifications",
    "PUSHOVER_API_TOKEN": "${PUSHOVER_API_TOKEN}",
    "PUSHOVER_USER_KEY": "${PUSHOVER_USER_KEY}"
  }
}
