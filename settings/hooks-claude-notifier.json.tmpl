{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${REPO_DIR}/shell/notifications/claude-notifier.py UserPromptSubmit",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${REPO_DIR}/shell/notifications/claude-notifier.py Stop",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${REPO_DIR}/shell/notifications/claude-notifier.py SubagentStop",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "${REPO_DIR}/shell/notifications/claude-notifier.py Notification",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "${REPO_DIR}/shell/notifications/claude-notifier.py Notification",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "${REPO_DIR}/shell/notifications/claude-notifier.py Notification",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "auth_success",
        "hooks": [
          {
            "type": "command",
            "command": "${REPO_DIR}/shell/notifications/claude-notifier.py Notification",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${REPO_DIR}/shell/notifications/claude-notifier.py SessionStart",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${REPO_DIR}/shell/notifications/claude-notifier.py SessionEnd",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "env": {
    "NOTIFICATION_SOUND": "${NOTIFICATION_SOUND}",
    "NOTIFICATION_EDITOR": "${NOTIFICATION_EDITOR}"
  }
}
